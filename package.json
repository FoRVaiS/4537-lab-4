{
  "scripts": {
    "build:watch:html": "pug -o ./public ./src/index.pug --pretty --watch",
    "build:watch:css": "sass --no-source-map ./src/styles/styles.scss:./public/styles/styles.css --watch",
    "build:watch:js": "tsc --rootDir src/ --outDir ./public --watch",
    "serve": "browser-sync start --server public --files public -w",
    "clean": "rimraf public/",
    "start": "npm-run-all clean -p build:watch:* serve"
  },
  "devDependencies": {
    "browser-sync": "^2.27.7",
    "npm-run-all": "^4.1.5",
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^3.0.2",
    "sass": "^1.49.7",
    "typescript": "^4.9.5"
  }
}
